<Window x:Class="TableHouse.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Введите пароль:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,40"/>
        <PasswordBox x:Name="passwordBox" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
        <TextBlock x:Name="errorTextBlock" Text="Неверный пароль. Попробуйте снова." Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0"/>
        <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0" Click="OKButton_Click"/>
    </Grid>
</Window>
