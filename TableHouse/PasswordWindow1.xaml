<Window x:Class="TableHouse.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Password" Height="400" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Введите пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,73,0,0" FontSize="26"/>
        <PasswordBox x:Name="passwordBox" Width="300" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
        <TextBlock x:Name="errorTextBlock" Text="Неверный пароль. Попробуйте снова." Foreground="Red" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0"/>
        <Button Content="OK" Width="160" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,263,0,0" Click="OKButton_Click"/>
    </Grid>
</Window>
