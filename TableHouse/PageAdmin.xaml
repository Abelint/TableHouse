<Page x:Class="TableHouse.PageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TableHouse"
      mc:Ignorable="d" 
      d:DesignHeight="686.25" d:DesignWidth="970"
      Title="PageAdmin">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*" />
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <Button Content="Редактирование организаций" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                Grid.Row="0" 
                Grid.Column="0" 
                Width="Auto" 
                Height="Auto" 
                Margin="10,10,10,10" Click="Button_Click"/>

        <Button Content="Редактирование плана этажа" 
                HorizontalAlignment="Stretch"    
                VerticalAlignment="Stretch" 
                Grid.Row="0" 
                Grid.Column="2" 
                Width="Auto" 
                Height="Auto" 
                Margin="10,10,10,10"/>
    </Grid>
</Page>
